{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player Schema",
  "definitions": {
    "Player": {
      "title": "Player",
      "type": "object",
      "required": [
        "account_id",
        "id",
        "name"
      ],
      "properties": {
        "account_id": {
          "type": "string",
          "description": "Unique identifier for the account this player belongs to",
          "example": "briceburg"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the player",
          "example": "living-room"
        },
        "name": {
          "type": "string",
          "description": "Display name of the player",
          "example": "Living Room"
        },
        "stationsUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the player's station list",
          "example": "https://registry.radiopad.dev/v1/stations/briceburg"
        },
        "switchboardUrl": {
          "type": "string",
          "format": "uri",
          "description": "WebSocket URL for the player's switchboard",
          "example": "wss://switchboard.radiopad.dev/briceburg/living-room"
        }
      },
      "additionalProperties": false
    }
  }
}